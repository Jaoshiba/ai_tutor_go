                stack: error.stack,
                eventName: event.constructor.name
            };
            let formData = new FormData();
            for (let [k, v] of Object.entries(logData)) {
                formData.append(k, v);
            }
            fetch("/api/browser_logs/log", {
                method: "POST",
                body: formData
            });
        }
    }
    window.addEventListener("error", mtErrorHandler);
    window.addEventListener("unhandledrejection", mtErrorHandler);
